  art_number = {89341W},
  author_keywords = {Aberration correction; Graphics processing unit; Holography; Interferometric synthetic aperture microscopy; Inverse scattering; Optical coherence microscopy; Optical coherence tomography; Real time},
  isbn = {978-0-8194-9847-2},
  keywords = {Aberration correction,Aberrations,Computational methods,Computer graphics,Computer graphics equipment,Graphics Processing Unit,Hardware,Holography,Inverse scattering,Medical imaging,Optical coherence microscopy,Optical tomography,Program processors,Real time,Synthetic apertures},
