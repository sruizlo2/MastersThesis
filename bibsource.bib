  journal = {IEEE Transactions on Image Processing},
  keywords = {algorithm,Algorithms,Approximation theory,article,artifact,Artifacts,Coherent light,computer assisted diagnosis,Computer simulation,Computer-Assisted,Deconvolution,evaluation,Gaussian beam,image enhancement,Image Enhancement,Image Interpretation,Image quality,Imaging,information retrieval,Information Storage and Retrieval,Iterative methods,Mathematical models,Medical imaging,methodology,Optical Coherence,optical coherence tomography,Optical coherence tomography,Optical microscopy,Optimization,Richardson-Lucy algorithms,three dimensional imaging,Three-Dimensional,Tomography,Transverse resolution,validation study},
