}

@article{Fechtig2015_Full,
  title = {Full Range Line-Field Parallel Swept Source Imaging Utilizing Digital Refocusing},
  author = {Fechtig, D.J. and Kumar, A. and Drexler, W. and Leitgeb, R.A.},
  year = {2015},
  volume = {62},
