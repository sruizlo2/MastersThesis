  keywords = {Attractive solutions,Biological samples,digital refocusing,Geometrical optics,Health care,High Speed,Line fields,Motion artifact,Neurophysiology,Optical tomography,Parallel configuration,Phase stability,Photonics,Wavefront correction},
  language = {English},
