  correspondence_address1 = {Adie, S. G.; Beckman Institute for Advanced Science and Technology, University of Illinois at Urbana-Champaign, Urbana, IL 61801, United States},
  isbn = {978-0-8194-8426-0},
  keywords = {Aberration correction,Beam profiles,Beam scan,Forward models,Holography,Imaging systems,Incident beams,Interferometric synthetic aperture microscopy,Light,Light collection,Object reconstruction,Optical coherence microscopy,Optical coherence Tomography,Physical model,Point-Spread function,Scattering potentials,Spherical aberrations,Synthetic apertures,Tomography},
