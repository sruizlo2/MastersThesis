@inproceedings{Shemonski2015_computational,
  title = {A Computational Approach to High-Resolution Imaging of the Living Human Retina without Hardware Adaptive Optics},
  author = {Shemonski, N.D. and Adie, S.G. and Liu, Y.-Z. and South, F.A. and Carney, P.S. and Boppart, S.A.},
  editor = {Ho A., Manns F., Soderberg P.G.},
