  correspondence_address1 = {Boppart, S.A.; Beckman Institute for Advanced Science and Technology, University of Illinois at Urbana-ChampaignUnited States; email: boppart@illinois.edu},
  isbn = {978-1-55752-956-5},
  keywords = {Adaptive optics,Biological tissues,Depth of field,Guide star,Imaging techniques,Interferometric tomography,Interferometry,Pupil aberrations,Pupil function,Stars,Subresolution,Zernike polynomials},
  language = {English},
  series = {Frontiers in {{Optics}}, {{FIO}} 2012}
}

